<Window x:Class="Chapter01.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Chapter01" Height="300" Width="300"
	>
	<Grid>
		<StackPanel>
			<TextBlock Name="textBlock" Margin="5" TextAlignment="Center" Text="Hello, ВПФ!" />
			<TextBox Name="textBox" Margin="5" TextAlignment="Center" TextChanged="TextBox_OnTextChanged"/>
			<Button Margin="5" Width="200" Content="Изменить цвет текста" Click="ButtonChangeColor_OnClick"/>
			<Button Margin="5" Width="200" Content="Изменить размер текста" Click="ButtonChangeSize_OnClick" />
		</StackPanel>
	</Grid>
</Window>